<Window x:Class="NextUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NextUI"
        mc:Ignorable="d"
         xmlns:vm="clr-namespace:NextUI.ViewModels"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Border CornerRadius="10,10,10,10" Background="AliceBlue" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="NextUI"/>
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
                <Button Content="File" Style="{StaticResource SideMenuButton}"/>
                <Button Content="New" Style="{StaticResource SideMenuButtonSub}"/>
                <Button Content="Open" Style="{StaticResource SideMenuButtonSub}"/>
                <Button Content="Save" Style="{StaticResource SideMenuButtonSub}"/>
                <Button Content="Exit" Style="{StaticResource SideMenuButton}"/>
                <Button Content="Home"  Command="{Binding ShowHomeCommand}" />
                <Button Content="Settings"  Command="{Binding ShowSettingsCommand}" />
            </StackPanel>
            <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding CurrentView}" />
        </Grid>
    </Border>
</Window>
